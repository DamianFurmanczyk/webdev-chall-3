.clients
  padding 5rem 0

  h2 
    heading()

  .container > p
    sub()
    margin-bottom 3rem

  .client
    padding 1rem 0
    display flex
    align-items: center
    
    @media screen and (max-width: 769px)
      flex-direction: column !important

      .bq-box
        &::after
          display none !important
    
    .bq-box
      display flex
      align-items center
      margin 25px
      background: whitish
      padding 25px 20px 55px 20px
      border-radius: 5px

    &-quote
      sub(1rem)
      margin-bottom 2rem

    blockquote
      padding 0 20px

    &-signature
      sub(1rem)
      color green
      text-align center

    aside
      border-radius: 50%
      padding 110px
      background whitish
      height 0

    &.first
      .bq-box
        margin-left 40px
        position: relative
        &::after
          content ''
          position absolute
          top 50%
          right 100%
          transform: translateY(-50%)
          border 10px transparent solid
          border-right 10px whitish solid

    &.second
      flex-direction: row-reverse
      .bq-box
        margin-right 40px
        position relative
        &::after
          content ''
          position absolute
          top 50%
          left 100%
          transform: translateY(-50%)
          border 10px transparent solid
          border-left 10px whitish solid