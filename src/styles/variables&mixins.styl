green = #7CC576
lightgray = #777
blackish = #222222
whitish = #ECECEC
lightergray = #cccccc

heading()
  font-size arguments || 2.5rem
  font-weight bolder
  text-align: center
  margin-bottom 1rem
  text-transform: uppercase

sub()
  font-family "Roboto Slab"
  font-size arguments || 1.2rem
  font-weight: lighter
  color lightgray
  text-align center

sectionWmargin()
  margin-top arguments || 7rem
  margin-bottom arguments || 7rem

button()
  background: green
  background: linear-gradient(top, green 0%, lighten(green, 30%) 100%)
  padding 22px 35px
  font-size 1rem !important
  color whitish
  border-width 0
  font-size 0.9rem
  border-radius 35px
  font-weight: bold
  font-family: 'Montserrat'
  text-shadow: 0 1px 1px blackish
  text-transform: uppercase
  &:hover
    cursor pointer
    background: linear-gradient(top, darken(green, 10%) 0%, lighten(green, 20%) 100%)