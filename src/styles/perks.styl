.perks
  text-align: center

  &-small
    sub()
    margin-bottom 3rem

  &-row
    display flex
    justify-content: space-around

    @media screen and (max-width: 769px)
      flex-direction: column

      .perks-column
        max-width 600px
        margin 0 auto

    .img_mt1
      margin-top 4px

    .img_mt2
      margin-top 8px

    img
      max-height 100px
      padding 30px 0

    h3
      font-weight bold
      margin-bottom: .5rem

    small
      small(.8rem)
      padding 0 1.5rem
      line-height: 1.3rem
      display block